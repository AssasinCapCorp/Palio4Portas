<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#2B2A2A"
    tools:context=".fragments.PerfilFragment">

    <ImageView
        android:id="@+id/imageView35"
        android:layout_width="415dp"
        android:layout_height="299dp"
        android:layout_marginTop="-150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.72"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/teladefundodoperfil" />

    <TextView
        android:id="@+id/nomeDaQuestao"
        android:layout_width="117dp"
        android:layout_height="32dp"
        android:fontFamily="sans-serif"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#F1EDED"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/botonFoto"
        app:layout_constraintStart_toStartOf="@+id/botonFoto"
        app:layout_constraintTop_toBottomOf="@+id/botonFoto"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView37"
        android:layout_width="260dp"
        android:layout_height="161dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomeDaQuestao"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/placardediasestudados" />

    <ImageView
        android:id="@+id/imageView38"
        android:layout_width="251dp"
        android:layout_height="67dp"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView37"
        app:layout_constraintVertical_bias="0.162"
        app:srcCompat="@drawable/_blocos_estudados_" />

    <ImageView
        android:id="@+id/imageView40"
        android:layout_width="258dp"
        android:layout_height="77dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView38"
        app:srcCompat="@drawable/_praticar_feitos_" />

    <ImageView
        android:id="@+id/imageView42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/imageView38"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toEndOf="@+id/imageView38"
        app:layout_constraintTop_toTopOf="@+id/imageView38"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/circulofoda" />

    <ImageView
        android:id="@+id/imageView43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/imageView40"
        app:layout_constraintEnd_toEndOf="@+id/imageView42"
        app:layout_constraintStart_toStartOf="@+id/imageView42"
        app:layout_constraintTop_toTopOf="@+id/imageView40"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/circulofoda" />

    <TextView
        android:id="@+id/qtgBlocosEstudados"
        android:layout_width="48dp"
        android:layout_height="38dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#DACECE"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView42"
        app:layout_constraintEnd_toEndOf="@+id/imageView42"
        app:layout_constraintStart_toStartOf="@+id/imageView42"
        app:layout_constraintTop_toTopOf="@+id/imageView42" />

    <TextView
        android:id="@+id/praticarFeitos"
        android:layout_width="48dp"
        android:layout_height="38dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#DACECE"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView43"
        app:layout_constraintEnd_toEndOf="@+id/imageView43"
        app:layout_constraintStart_toStartOf="@+id/imageView43"
        app:layout_constraintTop_toTopOf="@+id/imageView43" />

    <TextView
        android:id="@+id/diasEstudados"
        android:layout_width="118dp"
        android:layout_height="49dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#D9E3EC"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView37"
        app:layout_constraintEnd_toEndOf="@+id/imageView37"
        app:layout_constraintStart_toStartOf="@+id/imageView37"
        app:layout_constraintTop_toTopOf="@+id/imageView37"
        app:layout_constraintVertical_bias="0.65999997" />

    <Button
        android:id="@+id/botonFoto"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="@drawable/portraitusu"
        android:text="Foto"
        app:layout_constraintBottom_toBottomOf="@+id/imageView35"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView35" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/foto"
        android:layout_width="125dp"
        android:layout_height="125dp"
        app:layout_constraintBottom_toTopOf="@+id/nomeDaQuestao"
        app:layout_constraintEnd_toEndOf="@+id/botonFoto"
        app:layout_constraintStart_toStartOf="@+id/botonFoto"
        app:layout_constraintTop_toTopOf="@+id/botonFoto" />

    <ImageView
        android:id="@+id/sairConta"
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_baseline_exit_to_app_24"
        app:layout_constraintBottom_toBottomOf="@+id/nomeDaQuestao"
        app:layout_constraintStart_toEndOf="@+id/botonFoto"
        app:layout_constraintTop_toTopOf="@+id/botonFoto"
        app:layout_constraintVertical_bias="0.577" />
</androidx.constraintlayout.widget.ConstraintLayout>